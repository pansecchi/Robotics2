<launch>
  <!-- Convert PointCloud to LaserScan -->
  <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan" output="screen">
    <remap from="cloud_in" to="/ugv/rslidar_points"/>
    <param name="scan_topic" value="/scan"/>
    <param name="target_frame" value="base_link"/>
    <param name="min_height" value="0.1"/>
    <param name="max_height" value="1.0"/>
    <param name="angle_min" value="-1.57"/>
    <param name="angle_max" value="1.57"/>
    <param name="angle_increment" value="0.01"/>
    <param name="scan_time" value="0.1"/>
    <param name="range_min" value="0.2"/> <!-- Aggiornato per migliorare la risoluzione a breve distanza -->
    <param name="range_max" value="30.0"/>
    <param name="use_inf" value="true"/>
  </node>

  <!-- Launch GMapping for SLAM -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <param name="scan_topic" value="/scan"/>
    <param name="maxUrange" value="30.0"/> <!-- Aggiornato per riflettere la massima portata del LiDAR -->
    <param name="maxRange" value="30.0"/> <!-- Aggiornato per riflettere la massima portata del LiDAR -->
    <param name="linearUpdate" value="0.2"/> <!-- Aggiornato per mappatura più dettagliata -->
    <param name="angularUpdate" value="0.1"/> <!-- Aggiornato per mappatura più dettagliata -->
    <param name="temporalUpdate" value="1.0"/> <!-- Aggiunto per aggiornamenti temporali -->
    <param name="resampleThreshold" value="0.5"/>
    <param name="particles" value="50"/> <!-- Aumentato per migliorare la qualità della mappatura -->
    <param name="xmin" value="-20.0"/> <!-- Aggiornato per una mappa più grande -->
    <param name="ymin" value="-20.0"/> <!-- Aggiornato per una mappa più grande -->
    <param name="xmax" value="20.0"/> <!-- Aggiornato per una mappa più grande -->
    <param name="ymax" value="20.0"/> <!-- Aggiornato per una mappa più grande -->
    <param name="delta" value="0.05"/>
    <param name="llsamplerange" value="0.1"/> <!-- Aumentato per una migliore esplorazione delle probabilità -->
    <param name="llsamplestep" value="0.1"/> <!-- Aumentato per una migliore esplorazione delle probabilità -->
    <param name="lasamplerange" value="0.1"/> <!-- Aumentato per una migliore esplorazione delle probabilità -->
    <param name="lasamplestep" value="0.1"/> <!-- Aumentato per una migliore esplorazione delle probabilità -->
  </node>

  <!-- Publish odometry to TF -->
  <node name="encoder_odom_to_tf" pkg="second_project" type="odom_to_tf" output="screen">
    <param name="root_frame" value="odom"/>
    <param name="child_frame" value="base_link"/>
    <remap from="input_odom" to="/ugv/odom"/>
  </node>

  <!-- Static transform between rslidar and base_link -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher" args="0 0 0 0 0 0 base_link rslidar"/>

</launch>

